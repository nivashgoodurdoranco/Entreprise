{% extends 'base.html.twig' %}

{% block title %}Annuaire des employés{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Annuaire des employés</h1>

    <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
          </tr>
        </thead>
        <tbody>
            {% for employe in employes %}
            <tr>
                <th scope="row">{{ employe.id }}</th>
                <td>{{ employe.prenom }}</td>
                <td>{{ employe.nom }}</td>
                <td>{{ employe.telephone }}</td>
                <td>{{ employe.email }}</td>
                <td>{{ employe.adresse }}</td>
                <td>{{ employe.service }}</td>
                <td>{{ employe.salaire }}</td>
                <td>{{ employe.createdAt|date("m/d/Y")}}</td>
                <td>
                  <a href="{{ path('edit_employe', { id: employe.id }) }}" class="text-warning mr-3"><i class="fas fa-edit mr-1"></i></a>
                  <a href="{{ path('delete_employe', { id: employe.id }) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette publication ?')" class="text-danger"><i class="fas fa-trash-alt mr-1"></i></a>
                </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
{% endblock %}
